<%-include('./templates/cabecera.ejs', {tituloWeb: 'Mascotas'}) %>

<div class="container">
    <h1>CRUD MongoDB</h1>
    
    <a href="/mascotas/crear"
    
    class="btn btn-success btn-block my-4" 
    >
      Crear nueva mascota

    </a>
      


    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Accion</th>
          </tr>
        </thead>
        <tbody>
            <% if (arrayMascotas.length > 0) { %>
                <% arrayMascotas.forEach(element => { %>
                    
                    <tr>
                        <th scope="row"><%= element.id %></th>
                        <td><%= element.nombre %></td>
                        <td><%= element.descripcion %></td>
                        <td>
                          <a href="mascotas/<%= element.id %>" class="btn btn-warning btn-sm">Editar</a>
                        </td>
                    </tr>   

                <% }) %>             
            <% } %>             
        </tbody>
      </table>

</div>



<%-include('./templates/footer.ejs') %>

